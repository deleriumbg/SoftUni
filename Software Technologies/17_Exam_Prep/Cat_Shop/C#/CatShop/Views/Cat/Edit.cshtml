@model CatShop.Models.Cat

@{
    ViewBag.Title = "Edit";
}

<div class="wrapper">
    @using (Html.BeginForm("Edit", "Cat", FormMethod.Post, new { @class = "cat-create" }))
    {
        @Html.AntiForgeryToken()
        <div class="create-header">
            Edit Cat
        </div>
        <div class="create-name">
            <div class="create-name-label">Name</div>
            <input class="create-name-content" name="name" value="@Model.Name" />
        </div>
        <div class="create-nickname">
            <div class="create-nickname-label">Nickname</div>
            <input class="create-nickname-content" name="nickname" value="@Model.Nickname"/>
        </div>
        <div class="create-price">
            <div class="create-price-label">Price</div>
            <input type="number" min="0" step="0.00001" class="create-price-content" name="price" value="@Model.Price" />
        </div>
        <div class="create-button-holder">
            <button type="submit" class="submit-button">Edit Cat</button>
            <a type="button" href="/" class="back-button">Back</a>
        </div>
    }
</div>

