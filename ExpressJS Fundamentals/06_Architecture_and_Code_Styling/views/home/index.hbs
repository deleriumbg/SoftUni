<div class="container body-content">
    <div class="row">
        <div class="col-md-6">
            {{#each articles}}
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>{{content}}
                </p>

                <small class="author">
                    {{author.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/article/details/{{_id}}">Read more &raquo;</a>
                    </div>
                </footer>
            </article>
            {{/each}}
        </div>
    </div>
</div>